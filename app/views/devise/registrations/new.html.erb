<div class="container-fluid">
  <div class="row">
    <div class=" registrationBlock col-xs-12 col-sm-offset-4 col-sm-4 col-md-offset-4 col-md-4">

      <div class="formTitle">
        <h2>Pser<%= resource_name.to_s.humanize %></h2>
      </div>
        <h5 id="infoRegistration">Completa el formulario para encontrar el servicio que deseas</h5>


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="field form-inline">

          <%= f.text_field :first_name, autofocus: true, :class =>'form-control', :placeholder =>"Nombre"%>
        </div>

        <div class="field form-inline">

          <%= f.text_field :last_name,:class =>'form-control', :placeholder =>"Apellido"%>
        </div>

        <div class="field form-inline">

          <%= f.text_field :address,:class =>'form-control', :placeholder =>"Dirección" %>
        </div>

        <div class="field form-inline">

          <%= f.text_field :phone,:class =>'form-control', :placeholder =>"Telefono" %>
        </div>

        <div class="field form-inline">

          <%= f.email_field :email, autofocus: true,:class =>'form-control', :placeholder =>"Email" %>
        </div>

        <div class="field form-inline">

          <% if @minimum_password_length %>

          <% end %>
          <%= f.password_field :password, autocomplete: "off" ,:class =>'form-control', :placeholder =>"Contraseña (mínimo 6 carácteres)"%>
        </div>

        <div class="field form-inline">

          <%= f.password_field :password_confirmation, autocomplete: "off" ,:class =>'form-control', :placeholder =>"Confirmar Contraseña"%>
        </div>
        
        


        <% @service=Service.all%>
        <% @service.each do |service|%> 
          <div class="field ">
            <%= tag("input", type: "radio", name:"Servicio", value: service.name)%>
            <%= service.name %>
          </div>
        <%end%>
        

        <div class="actions">
         <%= f.submit "Sign up", :class =>'btn btn-warning'%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>