	  	<%= f.label :provider_id, c.provider_id %><br />
	    <% f.text_area :provider_id %>
	  </td>

	  <td class="field">
	  	<%= f.label :date_request, c.date_request %><br />
	    <% f.date_field :date_request %>
	  </td>
	 
	  <td class="field">
	    <%= f.label :description, c.description %><br />
	    <% f.text_area :description%>
	  </td>

	  <td class="actions">
	    <%= f.submit "Aceptar" %>
	  </td>

	<%end%> 
