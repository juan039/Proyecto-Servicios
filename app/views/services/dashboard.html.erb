<h1>Contratos disponibles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Solicitante</th>
      <th>Servicio</th>
      <th>Fecha</th>
      <th>Dirección</th>
      <th>Descripción</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |c| %>
      <% client=Contract.find(c.id).client%>
      <tr>
        <td><%= client.first_name + " " + client.last_name %></td>
        <td><%= c.service.name %></td>
        <td><%= c.date_request%></td>
        <td><%= client.address%></td>        
        <td><%= c.description%></td>
        <td><button><a href="/accept_contract/<%=c.id%>">Aceptar</a></button></td>
      </tr>
    <% end %>
  </tbody>
</table>